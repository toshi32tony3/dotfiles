[user]
  name = Toshimitsu Chiba
  email = toshimitsu.chiba@tel.com
[core]
  autocrlf = false
  editor = gvim
  quotepath = false
  preloadindex = true
  fscache = true
[push]
  default = simple
[diff]
  tool = gvimdiff2
  algorithm = histogram
[merge]
  tool = gvimdiff3
  ff = false
[pull]
  ff = only
[mergetool "gvimdiff3"]
  cmd = gvim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[mergetool]
  prompt = false
  keepBackup = false
[color]
  ui = auto
[alias]
  co = checkout
[credential]
	helper = cache
  interactive = never
[gui]
  encoding = utf-8
