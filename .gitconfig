[user]
	name = toshi32tony3
	email = toshi32tony3@gmail.com
[core]
	autocrlf = true
	editor = gvim
[push]
	default = simple
[diff]
	tool = gvimdiff2
	algorithm = histogram
[merge]
	tool = gvimdiff3
	ff = false
[mergetool "gvimdiff3"]
	cmd = gvim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[mergetool]
	prompt = false
	keepBackup = false
[color]
	ui = auto
